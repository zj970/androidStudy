<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3399FF"
    android:orientation="vertical"
    tools:context="com.example.httpurlconnectiondemo.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#F5B800"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="HttpURLConnection\n实现HTTP客户端应用实例"
            android:textSize="26sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:text="使用HttpURLConnection 登录食乐网，\n并获取用户信息!\n网址为：http://www.s1777.cc"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="italic"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15px">
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="40px"
            android:background="#FFFFFF"
            android:hint="请输入登录名"
            android:textSize="16sp">
        </EditText>
        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/username"
            android:layout_marginTop="20px"
            android:background="#FFFFFF"
            android:hint="请输入密码"
            android:password="true"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/pwd"
            android:layout_marginTop="70px"
            android:background="#87E2E5"
            android:focusable="true"
            android:text="确定"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tipTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/okBtn"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textStyle="italic"/>
    </RelativeLayout>
</LinearLayout>