<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_marginTop="@dimen/dimens_10dp"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:id="@+id/search_edit"
                    android:hint="@string/explore_itineraries"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navi_dimens_50dp"/>

            <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/ic_menu_search"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="@null"/>

            <LinearLayout
                    android:id="@+id/travels_layout_1"
                    android:layout_below="@+id/search_edit"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:background="#FFC107"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                <TextView
                        android:textSize="32sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="100dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:text="@string/top_picks"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btn_more_1"
                        android:textSize="24sp"
                        android:layout_marginRight="10dp"
                        android:textColor="#222222"
                        android:background="@null"
                        android:layout_gravity="center_vertical"
                        android:text="@string/travels_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/travels_layout_2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/travels_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/top_pick_image_0"
                            android:adjustViewBounds="true"
                            android:background="@drawable/background"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/navi_dimens_120dp"/>
                    <TextView
                            android:id="@+id/top_pick_title_0"
                            android:textSize="28sp"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="@string/fail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/top_pick_text_0"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="@string/fail_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="29dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/top_pick_image_1"
                            android:adjustViewBounds="true"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:background="@drawable/background"
                            android:layout_height="@dimen/navi_dimens_120dp"/>
                    <TextView
                            android:id="@+id/top_pick_title_1"
                            android:textSize="28sp"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:text="@string/fail"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/top_pick_text_1"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="@string/fail_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/travels_layout_3"
                    android:layout_below="@+id/travels_layout_2"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:background="#FFC107"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                <TextView
                        android:textSize="32sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="100dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:text="@string/free_travel"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btn_more_2"
                        android:textSize="24sp"
                        android:layout_marginRight="10dp"
                        android:textColor="#222222"
                        android:background="@null"
                        android:layout_gravity="center_vertical"
                        android:text="@string/travels_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/travels_layout_4"
                    android:orientation="horizontal"
                    android:layout_below="@+id/travels_layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/free_travel_image_0"
                            android:adjustViewBounds="true"
                            android:background="@drawable/background"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/navi_dimens_120dp"/>
                    <TextView
                            android:id="@+id/free_travel_title_0"
                            android:textSize="28sp"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="@string/fail"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/free_travel_text_0"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="@string/fail_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/free_travel_image_1"
                            android:adjustViewBounds="true"
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:background="@drawable/background"
                            android:layout_height="@dimen/navi_dimens_120dp"/>
                    <TextView
                            android:id="@+id/free_travel_title_1"
                            android:textSize="28sp"
                            android:textColor="#000000"
                            android:maxLines="1"
                            android:text="@string/fail"
                            android:ellipsize="end"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:id="@+id/free_travel_text_1"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:text="@string/fail_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/travels_layout_5"
                    android:layout_below="@+id/travels_layout_4"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:background="#FFC107"
                        android:layout_gravity="center_vertical"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                <TextView
                        android:textSize="32sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="100dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:text="@string/exotic"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="wrap_content"/>
                <Button
                        android:id="@+id/btn_more_3"
                        android:textSize="24sp"
                        android:layout_marginRight="10dp"
                        android:textColor="#222222"
                        android:background="@null"
                        android:layout_gravity="center_vertical"
                        android:text="@string/travels_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/travels_layout_6"
                    android:orientation="horizontal"
                    android:layout_below="@+id/travels_layout_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/exotic_image_0"
                            android:adjustViewBounds="true"
                            android:background="@drawable/background"
                            android:padding="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/navi_dimens_120dp"/>
                    <ImageView
                            android:id="@+id/exotic_image_1"
                            android:adjustViewBounds="true"
                            android:background="@drawable/background"
                            android:padding="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/navi_dimens_120dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/travels_layout_7"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:layout_below="@+id/travels_layout_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/exotic_image_2"
                            android:adjustViewBounds="true"
                            android:background="@drawable/background"
                            android:padding="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/navi_dimens_120dp"/>
                    <ImageView
                            android:id="@+id/exotic_image_3"
                            android:adjustViewBounds="true"
                            android:background="@drawable/background"
                            android:padding="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/navi_dimens_120dp"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>