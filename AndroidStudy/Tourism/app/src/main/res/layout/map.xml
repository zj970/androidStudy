<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
            android:layout_marginTop="@dimen/dimens_10dp"
            android:layout_marginRight="@dimen/navi_dimens_5dp"
            android:layout_marginLeft="@dimen/navi_dimens_5dp"
            android:layout_marginBottom="@dimen/dimens_10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.baidu.mapapi.map.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navi_dimens_400dp"/>
        </LinearLayout>
    </ScrollView>

    <ScrollView
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navi_dimens_200dp">
        <RelativeLayout
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/layout_1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:background="@drawable/home"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/navi_dimens_24dp"
                        android:layout_height="@dimen/navi_dimens_24dp"/>
                <Button
                        android:id="@+id/btn_menu_1"
                        android:textColor="#000000"
                        android:background="@null"
                        android:text="最佳路线"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_2"
                    android:layout_below="@id/layout_1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:background="@drawable/personal"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/navi_dimens_24dp"
                        android:layout_height="@dimen/navi_dimens_24dp"/>
                <Button
                        android:id="@+id/btn_menu_2"
                        android:textColor="#000000"
                        android:background="@null"
                        android:text="美食排行榜"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:id="@+id/menu_2_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_width="24dp"
                        android:layout_height="@dimen/navi_dimens_24dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_2_1"
                    android:layout_below="@id/layout_2"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:visibility="invisible"
                        android:layout_width="@dimen/navi_dimens_42dp"
                        android:layout_height="@dimen/navi_dimens_42dp"/>
                <Button
                        android:id="@+id/btn_menu_2_1"
                        android:textColor="#000000"
                        android:background="@null"
                        android:text="商家信息"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:visibility="invisible"
                        android:layout_width="@dimen/navi_dimens_16dp"
                        android:layout_height="@dimen/navi_dimens_16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_2_2"
                    android:layout_below="@id/layout_2_1"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:visibility="invisible"
                        android:layout_width="@dimen/navi_dimens_42dp"
                        android:layout_height="@dimen/navi_dimens_42dp"/>
                <Button
                        android:id="@+id/btn_menu_2_2"
                        android:textColor="#000000"
                        android:background="@null"
                        android:text="美食评价"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:visibility="invisible"
                        android:layout_width="@dimen/navi_dimens_16dp"
                        android:layout_height="@dimen/navi_dimens_16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_3"
                    android:layout_below="@id/layout_2_2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:background="@drawable/personal"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/navi_dimens_24dp"
                        android:layout_height="@dimen/navi_dimens_24dp"/>
                <Button
                        android:id="@+id/btn_menu_3"
                        android:textColor="#000000"
                        android:background="@null"
                        android:text="最优抉择"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:id="@+id/menu_3_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_width="24dp"
                        android:layout_height="@dimen/navi_dimens_24dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_3_1"
                    android:layout_below="@id/layout_3"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:visibility="invisible"
                        android:layout_width="@dimen/navi_dimens_42dp"
                        android:layout_height="@dimen/navi_dimens_42dp"/>
                <Button
                        android:id="@+id/btn_menu_3_1"
                        android:textColor="#000000"
                        android:background="@null"
                        android:text="步行少"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:visibility="invisible"
                        android:layout_width="@dimen/navi_dimens_16dp"
                        android:layout_height="@dimen/navi_dimens_16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_3_2"
                    android:layout_below="@id/layout_3_1"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:visibility="invisible"
                        android:layout_width="@dimen/navi_dimens_42dp"
                        android:layout_height="@dimen/navi_dimens_42dp"/>
                <Button
                        android:id="@+id/btn_menu_3_2"
                        android:textColor="#000000"
                        android:background="@null"
                        android:text="换乘少"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:visibility="invisible"
                        android:layout_width="@dimen/navi_dimens_16dp"
                        android:layout_height="@dimen/navi_dimens_16dp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_3_3"
                    android:layout_below="@id/layout_3_3"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:visibility="invisible"
                        android:layout_width="@dimen/navi_dimens_42dp"
                        android:layout_height="@dimen/navi_dimens_42dp"/>
                <Button
                        android:id="@+id/btn_menu_3_3"
                        android:textColor="#000000"
                        android:background="@null"
                        android:text="时间短"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:visibility="invisible"
                        android:layout_width="@dimen/navi_dimens_16dp"
                        android:layout_height="@dimen/navi_dimens_16dp"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>